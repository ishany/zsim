// Tests zsim hooks for different programming languages To build tests, run
// make -j -C misc/hooks You can run the real tests with make -C misc/hooks
// run_tests This uses logToFile because some JVMs need transparency (they fork
// and use pipes, and writing to stdout/stderr breaks those pipes)

sys = {
    cores = {
        c = {
            cores = {num_threads};
            dcache = "l1d";
            icache = "l1i";
        };
    };

    lineSize = 64;

    caches = {
        l1d = {
            caches = {num_threads};
            size = {l1d_size};
            latency = 4;
        };

        l1i = {
            caches = {num_threads};
            size = {l1i_size};
            latency = 3;
        };

        l2 = {
            caches = {num_threads};
            size = {l2_size};
            children = "l1d|l1i";
        };

        l3 = {
            caches = 1;
            size = {l3_size};
            latency = 27;
            children = "l2";

        };
    };

    frequency = 2270;
    mem = {
        type = "MD1";
        controllers = 1;
        bandwidth = {peak_bw};
    };
};

sim = {
    logToFile = true;
    phaseLength = 1000;
    printHierarchy = true;
};

process0 = {
    command = "jacobi {grid_size} {num_threads} {num_iterations}";
    startFastForwarded = False;
};
